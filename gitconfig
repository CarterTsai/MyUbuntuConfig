[user]
	name = Username
	email = email
[core]
	excludesfile = /home/ham/.gitignore_global
    editor = vim
[color]
    diff = auto
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    st = status
    ci = commit
    ca = commit -a
    wc = whatchanged
    forget = rm --cached
    pt = push --tags
    df = diff --no-ext-diff
    dt = diff
    dn = diff --name-only
    rw = commit --amend
    rb = reset --hard HEAD
    slog = shortlog
    rlog = reflog
    bla = blame
    amend = commit -a --amen
